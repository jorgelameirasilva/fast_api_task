# Clean Architecture FastAPI Application - Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# =============================================================================
# AZURE SEARCH CONFIGURATION (Production)
# =============================================================================

# Azure Cognitive Search settings
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-azure-search-api-key
AZURE_SEARCH_INDEX=your-search-index-name

# Optional: Azure Search advanced settings
AZURE_SEARCH_API_VERSION=2023-07-01-Preview
AZURE_SEARCH_SEMANTIC_SEARCH=false

# =============================================================================
# OPENAI CONFIGURATION (Production)
# =============================================================================

# OpenAI API settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: OpenAI advanced settings
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30

# =============================================================================
# MOCK SERVICES CONFIGURATION (Development)
# =============================================================================

# Mock service behavior
MOCK_SEARCH_ENABLED=true
MOCK_LLM_ENABLED=true
MOCK_RESPONSE_DELAY=100  # milliseconds

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health check configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Monitoring settings
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS settings (adjust for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example: Full development setup
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# MOCK_SEARCH_ENABLED=true
# MOCK_LLM_ENABLED=true

# Example: Production setup
# ENVIRONMENT=production
# AZURE_SEARCH_ENDPOINT=https://prod-search.search.windows.net
# AZURE_SEARCH_API_KEY=prod-api-key
# OPENAI_API_KEY=prod-openai-key
# LOG_LEVEL=INFO 